{% extends 'base.html.twig' %}
{% block title %} Articles {% endblock %}
{% block body %}
    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
                <th>Article Title</th>
                <th>Actions</th>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>
                            {{ article.title }}
                        </td>
                        <td>
                            <a href="/article/{{ article.id }}" class="btn btn-dark">Show</a>
                            <a href="/article/edit/{{ article.id }}" class="btn btn-light">Edit</a>
                            <a href="/article/delete/{{ article.id }}"
                               class="btn btn-danger delete-article" data-id="{{ article.id }}"
                            >Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No Articles for the display.</p>
    {% endif %}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/main.js') }}"></script>

{% endblock %}